# Токен бота от @BotFather
BOT_TOKEN=your_telegram_bot_token

# OpenAI API ключ для генерации сигналов в стиле пользователя
OPENAI_API_KEY=your_openai_api_key
# Если api.openai.com недоступен (блокировка) — укажи прокси или зеркало:
# Прокси (все запросы к OpenAI пойдут через него):
# OPENAI_PROXY=http://127.0.0.1:7890
# OPENAI_PROXY=http://user:password@host:port
# или коротко: логин:пароль:хост:порт  (подставится http://)
# OPENAI_PROXY=socks5://127.0.0.1:1080   (для socks5: pip install httpx[socks])
# Зеркало API (другой сервер вместо api.openai.com):
# OPENAI_API_BASE_URL=https://your-mirror.com/v1
# OPENAI_API_TIMEOUT=60

# Валюта и реквизиты (по желанию)
CURRENCY=USD

# Crypto Pay (CryptoBot) — токен из @CryptoBot → Crypto Pay → Create App
CRYPTO_PAY_API_TOKEN=your_crypto_pay_api_token
# Тестовая сеть (1/true/yes для тестов)
# CRYPTO_PAY_TESTNET=0
